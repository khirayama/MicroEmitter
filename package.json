{
  "name": "micro-emitter",
  "version": "1.1.9",
  "description": "micro event emitter in es6.",
  "main": "lib/index.js",
  "files": [
    "lib"
  ],
  "scripts": {
    "build": "babel src --out-dir lib --source-maps-inline",
    "build:client": "npm run build && browserify lib/index.js -o micro-emitter.js",
    "watch": "babel src --out-dir lib --watch --source-maps-inline",
    "lint": "eslint ./src",
    "test": "mocha --require=babel-core/register test/**/*.js",
    "start": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/khirayama/micro-emitter.git"
  },
  "eslintConfig": {
    "extends": "airbnb",
    "rules": {
      "no-underscore-dangle": 0
    }
  },
  "babel": {
    "presets": [
      "es2015"
    ],
    "plugins": [
      "babel-plugin-espower"
    ]
  },
  "keywords": [
    "eventemitter",
    "emitter",
    "event",
    "events",
    "browser",
    "flux"
  ],
  "author": "khirayama",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/khirayama/micro-emitter/issues"
  },
  "homepage": "https://github.com/khirayama/micro-emitter#readme",
  "devDependencies": {
    "babel-cli": "^6.16.0",
    "babel-core": "^6.17.0",
    "babel-plugin-espower": "^2.3.1",
    "babel-preset-es2015": "^6.16.0",
    "browserify": "^13.1.0",
    "eslint": "^3.8.0",
    "eslint-config-airbnb": "^12.0.0",
    "eslint-plugin-import": "^2.0.1",
    "eslint-plugin-jsx-a11y": "^2.2.3",
    "mocha": "^3.1.2",
    "power-assert": "^1.4.1"
  }
}
