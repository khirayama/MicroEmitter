{
  "name": "micro-emitter",
  "version": "1.1.15",
  "description": "micro event emitter.",
  "main": "lib/index.js",
  "engines": {
    "node": ">=0.10.0"
  },
  "files": [
    "lib"
  ],
  "scripts": {
    "prepare": "npm test && npm run build",
    "build": "babel src --out-dir lib --source-maps-inline",
    "watch": "babel src --out-dir lib --watch --source-maps-inline",
    "lint": "eslint --ignore-path .gitignore src test",
    "lint:fix": "eslint --fix --ignore-path .gitignore src test",
    "format": "prettier --ignore-path .gitignore --config .prettierrc --write 'src/**/*' 'test/**/*'",
    "test": "ava && npm run lint ./src",
    "start": "npm run build",
    "check": "npm-check-updates"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/khirayama/micro-emitter.git"
  },
  "keywords": [
    "eventemitter",
    "emitter",
    "event",
    "events",
    "flux"
  ],
  "author": "khirayama",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/khirayama/micro-emitter/issues"
  },
  "homepage": "https://github.com/khirayama/micro-emitter#readme",
  "devDependencies": {
    "ava": "0.25.0",
    "babel-cli": "6.26.0",
    "babel-core": "6.26.0",
    "babel-plugin-espower": "2.4.0",
    "babel-preset-es2015": "6.24.1",
    "eslint": "4.18.2",
    "eslint-config-prettier": "2.9.0",
    "eslint-config-xo-space": "0.18.0",
    "npm-check-updates": "2.14.1",
    "prettier": "1.11.1",
    "sinon": "4.4.2"
  },
  "babel": {
    "presets": [
      "es2015"
    ],
    "plugins": [
      "babel-plugin-espower"
    ]
  },
  "ava": {
    "files": [
      "src/**/*.test.js"
    ],
    "require": [
      "babel-core/register"
    ]
  }
}
