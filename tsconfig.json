{
  "compilerOptions": {
    "baseUrl": "./src",
    "outDir": "./lib",
    "allowJs": false,
    "jsx": "react",
    "sourceMap": false,
    "removeComments": true,
    "strict": false,
    "noImplicitAny": false,
    "strictNullChecks": false,
    "noImplicitThis": false,
    "allowSyntheticDefaultImports": false,
    "esModuleInterop": false,
    "alwaysStrict": false,
    "module": "commonjs",
    "target": "es2015"
  },
  "exclude": [
    "./src/**/*.test.ts"
  ]
}
